.PHONY: rebase-from-fork-origin
rebase-from-fork-origin: ## fork元を最新にして自分の変更をrebaseする
	(git branch -a | grep upstream) || git remote add upstream https://github.com/cypress-io/cypress-realworld-app.git
	git fetch upstream
	git checkout develop
	git rebase upstream/develop
	git checkout suna-main
	git rebase develop


.PHONY: fmt
fmt: ## prettier起動
	npm run prettier

################################################################################
# Utility-Command help
################################################################################
.DEFAULT_GOAL := help

################################################################################
# マクロ
################################################################################
# Makefileの中身を抽出してhelpとして1行で出す
# $(1): Makefile名
define help
  grep -E '^[a-zA-Z0-9_-]+:.*?## .*$$' $(1) \
  | grep --invert-match "## non-help" \
  | awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'
endef
################################################################################
# タスク
################################################################################
.PHONY: help
help: ## Make タスク一覧
	@echo '######################################################################'
	@echo '# Makeタスク一覧'
	@echo '# $$ make XXX'
	@echo '# or'
	@echo '# $$ make XXX --dry-run'
	@echo '######################################################################'
	@echo $(MAKEFILE_LIST) \
	| tr ' ' '\n' \
	| xargs -I {included-makefile} $(call help,{included-makefile})
